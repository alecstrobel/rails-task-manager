<h1>------ Your Task Manager -----</h1>

<h3>Here are all of your tasks:</h3>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li><input type="checkbox" <%= "checked" if task.completed %>><%= link_to task.title, task_path(task) %> : <%= link_to "Delete", task, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<p>Create a <%= link_to "new task", new_task_path()%>:</p>
